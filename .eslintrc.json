{
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "import/no-unused-modules": [
      2,
      {
        "missingExports": true,
        "unusedExports": true,
        "ignoreExports": [
          "src/app/layout.tsx"
        ]
      }
    ]
  }
}
